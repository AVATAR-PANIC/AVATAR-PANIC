<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GuardianAngelGoogleMapsViewer"
    >
    
    <fragment 
          android:id="@+id/guardian_angel_googlemap"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:name="com.google.android.gms.maps.MapFragment" />
    
    <!--
    <ImageView
        android:id="@+id/pointkey"
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:background="@drawable/pointkey"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="70dp"
        /> -->
    
     <LinearLayout
            android:id="@+id/logoBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp" >

            <ImageView
                android:id="@+id/airForceWings"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:background="@drawable/usaf_logo" />

            <ImageView
                android:id="@+id/tecedgeLogoText"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:background="@drawable/tecedgetransparent" />

            <ImageView
                android:id="@+id/discoveryLabText"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:background="@drawable/discoverylablogotransparent" />

            <ImageView
                android:id="@+id/afrl_logo"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:background="@drawable/afrl_logo_transparent" />
        </LinearLayout>
        
     <LinearLayout
         android:id="@+id/guardian_angel_buttons"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_alignParentBottom="true">
     
       <Button
             android:id="@+id/Plot"
             android:layout_width="85dp"
             android:layout_height="75dp"
             android:text="Plot" />

             <Button
             android:id="@+id/Clear"
             android:layout_width="85dp"
             android:layout_height="75dp"
             android:text="Clear" />

              <Button
             android:id="@+id/Send"
             android:layout_width="85dp"
             android:layout_height="75dp"      
             android:text="Send" />
              
              <TextView 
                  android:id="@+id/ga_map_text"
                  android:layout_width="wrap_content"
                  android:layout_height="70dp"
                  />
        </LinearLayout>
</RelativeLayout>